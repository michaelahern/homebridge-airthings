{
  "pluginAlias": "Airthings",
  "pluginType": "platform",
  "footerDisplay": "Generating a Client ID & Secret: [Airthings Dashboard](https://dashboard.airthings.com) -> Integrations -> Request API Client",
  "schema": {
    "type": "object",
    "properties": {
      "name": {
        "title": "Plugin Name",
        "type": "string",
        "required": false,
        "default": "Airthings"
      },
      "clientId": {
        "title": "Client ID",
        "type": "string",
        "required": true
      },
      "clientSecret": {
        "title": "Client Secret",
        "type": "string",
        "required": true
      },
      "devices": {
        "title": "Airthings Devices",
        "type": "array",
        "items": {
          "type": "object",
          "title": "Airthings Device",
          "properties": {
            "name": {
              "title": "Name",
              "type": "string",
              "required": true
            },
            "serialNumber": {
              "title": "Serial Number",
              "type": "string",
              "required": true
            },
            "airQualitySensor": {
              "type": "object",
              "title": "Air Quality Sensor",
              "required": false,
              "properties": {
                "co2Disabled": {
                  "title": "CO₂ Disabled in Air Quality Sensor",
                  "type": "boolean",
                  "required": false
                },
                "humidityDisabled": {
                  "title": "Humidity Disabled in Air Quality Sensor",
                  "type": "boolean",
                  "required": false
                },
                "pm25Disabled": {
                  "title": "PM2.5 Disabled in Air Quality Sensor",
                  "type": "boolean",
                  "required": false
                },
                "radonDisabled": {
                  "title": "Radon Disabled in Air Quality Sensor",
                  "type": "boolean",
                  "required": false
                },
                "vocDisabled": {
                  "title": "VOC Disabled in Air Quality Sensor",
                  "type": "boolean",
                  "required": false
                }
              }
            },
            "battery": {
              "type": "object",
              "title": "Battery",
              "required": false,
              "properties": {
                "disabled": {
                  "title": "Battery Status Disabled",
                  "type": "boolean",
                  "required": false
                }
              }
            },
            "detectionThresholds": {
              "type": "object",
              "title": "Detection Thresholds",
              "required": false,
              "properties": {
                "co2": {
                  "title": "CO₂ Detection Threshold (ppm)",
                  "type": "number",
                  "required": false,
                  "placeholder": 1000
                },
                "radon": {
                  "title": "Radon Detection Threshold (Bq/m³)",
                  "type": "number",
                  "required": false
                }
              }
            }
          }
        }
      },
      "debug": {
        "title": "Debug Logging",
        "type": "boolean",
        "required": false
      },
      "pollInterval": {
        "title": "Polling Interval (seconds)",
        "type": "integer",
        "required": false,
        "placeholder": 150
      }
    }
  },
  "layout": [
    {
      "type": "section",
      "title": "General Settings",
      "expandable": true,
      "expanded": true,
      "items": [
        {
          "items": [
            "clientId",
            "clientSecret"
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Airthings Devices (Optional)",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "key": "devices",
          "type": "array",
          "orderable": false,
          "buttonText": "Add Airthings Device",
          "items": [
            "devices[].name",
            "devices[].serialNumber",
            {
              "key": "devices[]",
              "type": "section",
              "title": "Air Quality Sensor Config (Optional)",
              "expandable": true,
              "expanded": false,
              "items": [
                "devices[].airQualitySensor.co2Disabled",
                "devices[].airQualitySensor.humidityDisabled",
                "devices[].airQualitySensor.pm25Disabled",
                "devices[].airQualitySensor.radonDisabled",
                "devices[].airQualitySensor.vocDisabled"
              ]
            },
            {
              "key": "devices[]",
              "type": "section",
              "title": "Battery Config (Optional)",
              "expandable": true,
              "expanded": false,
              "items": [
                "devices[].battery.disabled"
              ]
            },
            {
              "key": "devices[]",
              "type": "section",
              "title": "Detection Thresholds Config (Optional)",
              "expandable": true,
              "expanded": false,
              "items": [
                "devices[].detectionThresholds.co2",
                "devices[].detectionThresholds.radon"
              ]
            }
          ]
        }
      ]
    },
    {
      "type": "section",
      "title": "Advanced Settings (Optional)",
      "expandable": true,
      "expanded": false,
      "items": [
        {
          "items": [
            "debug",
            "name",
            "pollInterval"
          ]
        }
      ]
    }
  ]
}
